package BubMod.view.components {		import flash.display.Sprite;    import flash.text.TextField;	import fl.controls.Button;	import flash.text.*;     public class MessageBox extends Sprite {    		//Button which will be used to close the messagebox		public var okBtn:Button;        public function MessageBox(msg:String):void {		  //Create a new sprite to hold the message box          var msgbox:Sprite = new Sprite();          // drawing a blue/green rectangle          msgbox.graphics.beginFill(0x3BB9FF); // blue/green          msgbox.graphics.drawRect(0,0,200,80); // x, y, width, height          msgbox.graphics.endFill();           // drawing a white border          msgbox.graphics.lineStyle(2, 0xFFFFFF, 100);  // line thickness, line color (white), line alpha or opacity          msgbox.graphics.drawRect(0,0,200,80); // x, y, width, height          msgbox.alpha = .65; //Set the message box alpha to 65% 		  //Create a format for the warning message		  var attrFormat:TextFormat = new TextFormat();		  attrFormat.size = 12;		  attrFormat.align = TextFormatAlign.CENTER;		  //Create a new textfield to hold the warning message		  var textfield:TextField = new TextField();		  textfield.wordWrap = true;          textfield.text = msg;		  textfield.width = 200;		  textfield.textColor = 0xFFFFFF;		  textfield.setTextFormat(attrFormat);		  		  //Initialise the ok button		  okBtn = new Button();		  okBtn.x = 50;		  okBtn.y = 50;		  okBtn.label = "ok";		  //add the children to the message box          addChild(msgbox);             addChild(textfield);		  addChild(okBtn);        }     }  }